---
const {text} = Astro.props;
import "../styles/generel.css";

---
<button type="button">
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
        <path d="M15.75 18.75L9.75 12.75L15.75 6.75" stroke="#E73127" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    <span class="label">
        {text}
    </span>
</button>

<style>
    button{ 
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0.5rem;;
    background: none;
    color: none;
    border: none;
    cursor: pointer;
    gap: 0.5rem;
    width: 11rem;
    }
svg{
    flex-shrink: 0;
}
    .label{
    font-size: var(--footer-secondary-font-size);
      letter-spacing: 0.081rem;
      text-transform: var(--text-transform-uppercase);
      font-weight: var(--font-weight-medium);
      color: var(--secondary-color);
      text-align: left;
      word-wrap: break-word; /* Sikrer at ord kan bryde af */
    white-space: normal; /* Tillader white space at bryde normalt */
    }
    button:hover .label{
    color: var(--tertiary-color);
}
    /*TABLET TABLET TABLET TABLET*/
    @media (min-width: 768px) and (max-width: 1024px) {
.label{
  letter-spacing: 0.1375rem;
}
/* brugt chat til at lave billedet st√∏rre og fjerne det gamle */
svg{
  width: 1.5rem;
    height: 1.5rem; 
}
    }
    /*DESKTOP DESKTOP DESKTOP DESKTOP DESKTOP DESKTOP*/

@media (min-width: 1025px) {
  .label{
  font-size: var(--footer-secondary-font-size);
  letter-spacing: 0.1375rem;
}
svg{
  width: 2rem;
    height: 2rem; 
    transition: transform 0.5s ease;
}
button:hover svg {
    transform: translateX(-1rem);
}}
    </style>
    </style>